#!/bin/bash
PATH=/bin:/usr/bin

die() {
    echo $* >&2
    exit 1;
}

SRCDIR=`dirname $0`

if [ -e Makefile ]; then
    rm -f Makefile;
fi;

PREFIX=${1:-/usr/local}

echo "# Autogenerated Makefile at `date`"  >Makefile-wip
echo "# DO NOT EDIT THIS FILE!"           >>Makefile-wip
echo                                      >>Makefile-wip
echo "SRCDIR=$SRCDIR"                     >>Makefile-wip
echo "VPATH=$SRCDIR"                      >>Makefile-wip
echo                                      >>Makefile-wip
echo "PREFIX=$PREFIX"                     >>Makefile-wip
echo "DATADIR=$PREFIX/share"              >>Makefile-wip
echo "BINDIR=$PREFIX/bin"                 >>Makefile-wip
cat $SRCDIR/Makefile.in                   >>Makefile-wip
chmod ugo-w Makefile-wip
mv Makefile-wip Makefile

# vim: set ts=4 sw=4 et :
